<div class="home-background">
   <div class="home-box">
      <div class="home-box-body">
         <h1 class="text-color"align="center">RapidQuest</h1>
         <br>
         
         <div class="col-sm-6-btm">
            <div class="form-inline">
               <br>
               
               <div class="text-box">
               <div class="input-group">
                  <div class="input-group-addon">
                     <span class="glyphicon glyphicon-user"></span>
                  </div>
                  <div class ="error">
                  {{validated-input type="text" model=this valuePath='email' placeholder='Email Id'}}
                  </div>
                </div>
               </div>
               <br>
               <br>
               <br>
               <div class="text-box">
               <div class="input-group">
                  <div class="input-group-addon">
                     <span class="glyphicon glyphicon-lock"></span>
                  </div>
                  {{validated-input type="password" value="password" model=this valuePath='password' placeholder='Password'}}
               </div>
               </div>
               <br>
            </div>
            {{errormessage}}
            <div class="btngroup">
               <button type="button" class="btn btn-primary" {{action 'login'}} disabled={{v-get this 'isInvalid'}}> Sign In</button> 
               <button type="button" class="btn btn-primary" {{action 'register'}}> Sign Up</button>
            </div>
         </div>
      </div>
   </div>
</div>